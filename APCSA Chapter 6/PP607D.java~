public class PP607D
{
  public static void main (String[] args)
  {
    for (int row = 0; row < 10; row+=2)
    {
      System.out.print("    ");
      for (int spaces = 0; spaces <= 10-(2*row); spaces+=2)
      {
        System.out.print (" ");
      }
      for (int starCount = 0; starCount <= (2*row); starCount+=2)
      {
        System.out.print("*");
      }
      System.out.println("");
    }
  }
}